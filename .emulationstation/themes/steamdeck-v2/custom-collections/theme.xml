<theme>
   <include>./../theme.xml</include>
   <view name="system">
      <text name="system-metadata">
         <text>${systemHardwareType}</text>
      </text>
      <gameselector name="selector_random">
         <selection>random</selection>
      </gameselector>
      <video name="random-game">
         <origin>0 0</origin>
         <pos>0.588020833333333 0.327777777777778</pos><!-- 1129 354 -->
         <cropSize>0.274479166666667 0.363888888888889</cropSize><!-- 526 393 -->
         <imageType>screenshot</imageType>
         <delay>3</delay>
         <gameselector>selector_random</gameselector>
      </video>
   </view>
   <view name="gamelist">
      <text name="custom-collection-name">
         <origin>0 0</origin>
         <fontSize>0.036</fontSize>
         <letterCase>uppercase</letterCase>
         <metadata>systemFullname</metadata>
         <color>cccccc</color>
      </text>
   </view>
   <aspectRatio name="16:9">
      <view name="gamelist">
         <text name="custom-collection-name">
            <pos>0.43 0.002</pos>
            <size>0.40 0.075</size>
         </text>
      </view>
   </aspectRatio>
   <aspectRatio name="16:10">
      <view name="gamelist">
         <text name="custom-collection-name">
            <pos>0.477777777777778 0.002</pos>
            <size>0.444444444444444 0.075</size>
         </text>
      </view>
   </aspectRatio>
</theme>
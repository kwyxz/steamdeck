{
	"name": "Super Eagle",
	"author": "Shader version by The DOSBox Team",
	"targets": [
		{
			"name": "scaled_out",
			"mode": "guest",
			"scale": 2,
			"doublebuffer": true
		},
		{
			"name": "internal",
			"mode": "native",
			"doublebuffer": true
		}
	],
	"passes": [
		{
			"effect": "eagle/supereagle",
			"name": "Super Eagle pass",
			"input": [
				{ "sampler": "decal", "texture": "screen" },
				{ "sampler": "LUT",   "texture": "bgfx/chains/hq2x.png", "bilinear": true }
			],
			"output": "scaled_out"
		},
		{   "effect": "misc/blit",
			"name": "Final Blit",
			"input": [
				{ "sampler": "s_tex", "target": "scaled_out" }
			],
			"output": "output"
		}
	]
}

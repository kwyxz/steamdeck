//============================================================
//
//  saturation.json: Applies saturation to an image.
//
//============================================================
{
	"blend": {
		"equation": "add",
		"srcColor": "srcalpha",
		"dstColor": "1-srcalpha",
		"srcAlpha": "srcalpha",
		"dstAlpha": "1-srcalpha"
	},
	"depth": {
		"function": "always"
	},
	"cull": { "mode": "none" },
	"write": {
		"rgb": true,
		"alpha": true
	},
	"vertex": "chains/misc/vs_saturation",
	"fragment": "chains/misc/fs_saturation",
	"uniforms": [
		{ "name": "s_tex",        "type": "int",  "values": [ 1.0 ] },
		{ "name": "u_saturation", "type": "vec4", "values": [ 1.0, 0.0, 0.0, 0.0 ] }
	]
}

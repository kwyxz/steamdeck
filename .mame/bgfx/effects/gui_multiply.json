//============================================================
//
//  gui_multiply.json: Generic multiplicative blend shader
//  for GUI elements.
//
//============================================================
{
	"blend": {
		"equation": "add",
		"srcColor": "dstcolor",
		"dstColor": "1-srcalpha"
	},
	"depth": {
		"function": "always"
	},
	"cull": { "mode": "none" },
	"write": {
		"rgb": true,
		"alpha": true
	},
	"vertex": "vs_gui",
	"fragment": "fs_gui",
	"uniforms": [
		{ "name": "s_tex",           "type": "int",  "values": [ 1.0 ] },
		{ "name": "u_inv_view_dims", "type": "vec4", "values": [ 1.0, 1.0, 0.0, 0.0 ] }
	]
}
